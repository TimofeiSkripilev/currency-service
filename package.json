{
  "name": "currency-service",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev src/app.ts",
    "create-db": "ts-node src/commands/createDatabase.ts",
    "update-rates": "ts-node src/commands/updateRates.ts",
    "migrate": "knex --knexfile=src/knexfile.ts migrate:latest",
    "rollback": "knex --knexfile=src/knexfile.ts migrate:rollback",
    "seed": "knex --knexfile=src/knexfile.ts seed:run",
    "setup": "npm run create-db && npm run migrate && npm run seed",
    "prestart": "node check-env.js",
    "test": "jest --runInBand --forceExit --config=jest.config.ts",
    "test:debug": "jest --runInBand --forceExit --detectOpenHandles --config=jest.config.ts"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "iconv-lite": "^0.6.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.9.1",
    "node-cron": "^3.0.3",
    "objection": "^3.1.4",
    "openapi3-ts": "^4.4.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.3.3",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/rate-limit-redis": "^3.0.0",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0"
  }
}
